{
  "version": 2,
  "functions": {
    "api/*.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/status",
      "dest": "/api/status"
    },
    {
      "src": "/prices",
      "dest": "/api/prices"
    },
    {
      "src": "/update",
      "dest": "/api/update"
    },
    {
      "src": "/dashboard-sync.js",
      "dest": "/api/dashboard-sync.js"
    }
  ],
  "headers": [
    {
      "source": "/api/dashboard-sync.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
